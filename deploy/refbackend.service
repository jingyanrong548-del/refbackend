[Unit]
Description=REFPROP 热力学计算 API
After=network.target

[Service]
Type=simple
User=www-data
Group=www-data
WorkingDirectory=/opt/refbackend
Environment="RPPREFIX=/path/to/REFPROP"
Environment="PATH=/opt/refbackend/venv/bin:/usr/local/bin:/usr/bin:/bin"
Environment="WINE_REFPROP_URL=http://127.0.0.1:8002"
ExecStart=/opt/refbackend/venv/bin/uvicorn main:app --host 127.0.0.1 --port 8003
Restart=always
RestartSec=5

[Install]
WantedBy=multi-user.target
